<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_note_shape"
    android:elevation="10dp"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="@color/black">

    <LinearLayout
        android:id="@+id/item_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/item_note_background"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_note_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/item_note_tile"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="测试测试测试"
                android:textColor="?attr/item_note_title"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_note_content"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                android:textColor="@color/item_note_gray"
                android:textSize="20dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                android:gravity="right"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/item_note_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试时间 2021.05.16"
            android:textColor="@color/item_note_gray"
            android:textSize="15dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/text_gray" />

</LinearLayout>