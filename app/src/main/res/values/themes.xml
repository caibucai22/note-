<resources xmlns:tools="http://schemas.android.com/tools">
    <!--    亮色主题-->
    <style name="DayTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tvBackground">@color/white</item>
        <item name="menu_setting">@drawable/ic_settings_black_24dp</item>
        <item name="lvBackground">@color/near_white</item>
        <item name="settingIcon">@drawable/ic_settings_black_24dp</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">50dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="menu_delete_all">@drawable/ic_delete_forever_black_24dp</item>
        <item name="menu_delete">@drawable/ic_delete_black_24dp</item>
        <item name="menu_search">@drawable/ic_search_black_24dp</item>
        <item name="titleColor">@color/black</item>
        <item name="tvMainColor">@color/black</item>
        <item name="menu_finish_editing">@drawable/ic_finish_editing_black</item>
        <item name="tvSubColor">@color/grey9</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
        <item name="menu_alarm">@drawable/ic_alarm_black_24</item>

        <item name="testcolor">@color/teal_200</item>

        <item name="EditText_text_color">@color/black</item>
        <item name="picture_color">@color/grey9</item>
        <item name="text_color">@color/black</item>
        <item name="main_layout_background">@color/white</item>
        <item name="whole_background">@color/white</item>
        <item name="bottom_layout_background">@color/grey</item>
        <item name="EditText_background_color">@color/white</item>
        <item name="EditText_text_hint_color">@color/grey</item>
        <item name="write_layout_background">@color/grey</item>
        <item name="item_note_background">@color/white</item>
        <item name="item_note_title">@color/black</item>
        <item name="backPic">@drawable/ic_baseline_arrow_white_24</item>
    </style>
